{
  "id": "weatherlink.v1.api",
  "name": {
    "en": "WeatherLink v1 API"
  },
  "class": "sensor",
  "capabilities": [
    "measure_temperature",
    "measure_temperature.feelslike",
    "measure_temperature.dewpoint",
    "measure_humidity",
    "measure_pressure",
    "measure_wind_angle",
    "measure_wind_strength",
    "measure_gust_strength",
    "measure_rain.rate",
    "measure_rain"
  ],
  "capabilitiesOptions": {
    "measure_temperature.dewpoint": {
      "title": {
        "en": "Dewpoint",
        "nl": "Dauwpunt"
      }
    },
    "measure_temperature.feelslike": {
      "title": {
        "en": "Feels like",
        "nl": "Voelt als"
      }
    },
    "measure_rain.rate": {
      "title": {
        "en": "Rain rate",
        "nl": "Regenintensiteit"
      },
      "units": {
        "en": "mm/hr",
        "nl": "mm/h"
      }
    }
  },
  "images": {
    "large": "/drivers/weatherlink.v1.api/assets/images/large.png",
    "small": "/drivers/weatherlink.v1.api/assets/images/small.png"
  },
  "settings": [
    {
      "type": "group",
      "label": {
        "en": "Settings",
        "nl": "Instellingen"
      },
      "children": [
        {
          "id": "interval",
          "type": "number",
          "label": {
            "en": "Interval",
            "nl": "Interval"
          },
          "value": 60,
          "min": 60,
          "units": {
            "en": "seconds",
            "nl": "seconden"
          }
        },
        {
          "id": "deviceid",
          "type": "text",
          "label": {
            "en": "Device ID"
          },
          "hint": {
            "en": "ID of WeatherLink Device",
            "nl": "ID van WeatherLink device"
          },
          "value": "",
          "example": "001D0A00DE6A"
        },
        {
          "id": "pass",
          "type": "text",
          "label": {
            "en": "Password",
            "nl": "Wachtwoord"
          },
          "value": "",
          "example": "DEMO"
        },
        {
          "id": "apitoken",
          "type": "text",
          "label": {
            "en": "Api Token"
          },
          "hint": {
            "en": "Generated Api Token v1",
            "nl": "Gegenereerd Api Token v1"
          },
          "value": "",
          "example": "demo0a002bc5272033001d0a002bc527"
        }
      ]
    }
  ],
  "pair": [
    {
      "id": "start"
    }
  ]
}
  